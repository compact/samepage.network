{
  "name": "samepage.network",
  "version": "0.0.0",
  "description": "Description for samepage.network",
  "repository": "dvargas92495/samepage.network",
  "license": "MIT",
  "sideEffects": false,
  "scripts": {
    "api": "fuego api",
    "prebuild": "npm run generate:css -- --minify",
    "build": "fuego build",
    "dev": "fuego dev",
    "format": "prettier --write \"**/*.tsx\"",
    "generate:css": "tailwindcss -o ./app/tailwind.css",
    "postinstall": "fuego postinstall",
    "lint": "eslint . --ext .ts,.tsx",
    "start": "concurrently \"npm:api\" \"npm:dev\" \"npm:tailwind\"",
    "ssh": "ssh -i SamePage.pem ubuntu@35.173.242.123",
    "tailwind": "npm run generate:css -- --watch",
    "pretest": "esbuild ./package/src/testing/createTestSamePageClient.ts --outfile=./package/src/testing/createTestSamePageClient.js --bundle --platform=node",
    "test": "jest"
  },
  "dependencies": {
    "@dvargas92495/app": "^0.13.14",
    "automerge": "^1.0.1-preview.7",
    "markdown-to-jsx": "^7.1.7",
    "mdx-bundler": "^9.0.1"
  },
  "jest": {
    "transform": {
      "^.+\\.(t|j)sx?$": "esbuild-jest"
    },
    "testRegex": "/tests/.*\\.test\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "moduleNameMapper": {
      "~/(.*)": "<rootDir>/app/$1"
    },
    "testEnvironment": "node",
    "setupFiles": [
      "dotenv/config"
    ]
  }
}
